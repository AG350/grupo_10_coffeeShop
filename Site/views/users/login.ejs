<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head')%>

<body > 
  <%-include('../partials/header')%>
  <main>
      <div class="formContainer">
          <form action="/user/login" method="POST">
          <!--Campos del Login-->
              <!--Contenedor de login-->
              <div class="loginImg">
                  <i class="fas fa-user-circle"></i>
              </div>
              <div>
                  <% if (locals.errors && errors.credentials) { %>
                    <p><%= errors.credentials.msg %> </p>
                  <% } %>
              </div>
              <h1>Iniciar Sesión</h1>
              <label  for="email"> Correo Electrónico</label>
              <input  type="email" id="email" name="email" value="<%= locals.user && user.email  %> ">
              <% if (locals.errors && errors.email) { %>
                <small style="color: red"><%= errors.email.msg %> </small>
              <% } %>               
              <label  for="contraseña">Contraseña</label>
              <input type="password" id="contraseña" name="password">
              <% if (locals.errors && errors.password) { %>
                <small style="color: red"><%= errors.password.msg %> </small>
              <% } %> 
              <button class="btn primary" type="submit">Ingresar</button>
            
              <div class="rememberLogin">
                  <input class="checkbox" type="checkbox" id="rememberMe" checked><label for="rememberMe">Recordarme</label>
              </div> 
            </form>
            <a href="">Olvidé mi contraseña</a>
            <a href="/user/register"><button class="btn primary">Registrarme</button></a>
        </div>
      <!--Falta link para olvidar contraseña-->
  </main>

  <%-include('../partials/footer')%> 

</body>
</html>