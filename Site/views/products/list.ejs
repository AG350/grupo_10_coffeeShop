<!DOCTYPE html>
<html lang="en">
    
    <%- include('../partials/head.ejs') %>
    
    <body>
        <%- include('../partials/header.ejs') %>

        <main class="container">
            <!--Productos destacados-->
            <section class="products-page">
                
                <h1 class="hometitle">Nuestros productos</h1>
                <section>
                    <div class="column is-12">
                        <form action="/products/search">
                            <div class="field">
                                <div class="control">
                                    <input 
                                        type="text" 
                                        name="search" 
                                        value="<%= locals.search ? locals.search : "" %>"
                                        placeholder="Ingresa tu bÃºsqueda&hellip;">
                                    <button type="submit">Buscar</button>
                                </div>
                                <p class="feedback"></p>
                            </div>
                        </form>
                    </div>
                </section>
                <div class="container-products">
                    <% products.forEach(product => { %>
                        <%- include('../products/partials/product', { product }) %> 
                    <% }); %>
                </div>

            </section>
               

        </main>

        <%- include('../partials/footer')  %>  
    
    </body>
</html>

